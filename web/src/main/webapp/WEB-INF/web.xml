<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">
  <servlet>
    <servlet-name>ManifestText</servlet-name>
    <servlet-class>com.cantstopthesignals.five.ManifestTextServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServiceWorkerJavascript</servlet-name>
    <servlet-class>com.cantstopthesignals.five.ServiceWorkerJavascriptServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ManifestText</servlet-name>
    <url-pattern>/manifest.txt</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServiceWorkerJavascript</servlet-name>
    <url-pattern>/js/serviceWorker.js</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>WEB-INF/index.jsp</welcome-file>
  </welcome-file-list>
  <security-constraint>
    <web-resource-collection>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
</web-app>
